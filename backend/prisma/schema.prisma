datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model usuario {
    id        Int      @id @default(autoincrement())
    email     String   @unique
    senha     String
    nome      String
    agendamentos     Agendamento[]
}

model Agendamento {
    id        Int      @id @default(autoincrement())
    cliente   String
    data      String
    hora      String
    createdAt DateTime @default(now())

    //Relacionamento
    usuario     usuario   @relation(fields: [usuarioId], references: [id])
    usuarioId   Int
}


